{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "geometry_mask_flat",
    "geometry_mask_shape",
    "mask_encoding",
    "flattening_order"
  ],
  "properties": {
    "geometry_mask_flat": {
      "type": "array",
      "items": {
        "type": "integer",
        "enum": [0, 1]
      },
      "minItems": 1,
      "description": "Flattened voxel mask with binary encoding (0 = solid, 1 = fluid)"
    },
    "geometry_mask_shape": {
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 1
      },
      "minItems": 3,
      "maxItems": 3,
      "description": "3D shape of the voxel grid as [x, y, z] dimensions"
    },
    "mask_encoding": {
      "type": "object",
      "required": ["fluid", "solid"],
      "properties": {
        "fluid": {
          "type": "integer",
          "enum": [1]
        },
        "solid": {
          "type": "integer",
          "enum": [0]
        }
      },
      "additionalProperties": false,
      "description": "Binary encoding map for fluid and solid regions"
    },
    "flattening_order": {
      "type": "string",
      "enum": ["x-major", "y-major", "z-major"],
      "description": "Order in which the 3D mask was flattened"
    }
  },
  "additionalProperties": false
}



